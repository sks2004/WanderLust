<% layout("/layouts/boilerplate") %>
<script>
    const mapToken = '<%= process.env.MAP_TOKEN %>';
    const listing = <%- JSON.stringify(listing) %> 
</script>

    <div class="row">
            <div class="col-6 offset-3 mt-3 show-head">
                <h3><%= listing.title %></h3>
            </div>

            <div class="card col-6 offset-3 mt-2 listing-card-show">
                <img src="<%=listing.image.url%>" class="card-img-top show-img" alt="listing_image">
                <div class="card-body">
                    <div class="card-text">
                        <p>Owned by @<%= listing.owner.username %></p>
                        <p><%= listing.description %></p>
                        <p>&#8377;<%= listing.price.toLocaleString("en-IN") %> / night</p>
                        <p><%= listing.location %></p>
                        <%= listing.country %>
                    </div>
                </div>
                <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
                    <div class="btns ">
                        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark add-btn"> &nbsp;&nbsp;&nbsp;Edit&nbsp;&nbsp;&nbsp; </a>
        
                        <form method="post" action="/listings/<%= listing._id %>?_method=Delete">
                            <button class="btn btn-dark add-btn offset-4"> Delete </button>
                        </form>
                    </div>  
                    <% } %>
            </div>
            
            <div class="col-6 offset-3 add-review-card">
                <% if(currUser) { %>
                <hr>
                <h4 class="mb-3">Leave a review</h4>
                <form method="post" action="/listings/<%= listing._id %>/reviews" novalidate class="needs-validation">
                    <div>
                        <label for="rating" class="form-label rate">Rating</label>
                        <fieldset class="starability-slot">
                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                            <label for="first-rate1" title="Terrible"></label>
                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                            <label for="first-rate2" title="Not good"></label>
                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                            <label for="first-rate3" title="Average"></label>
                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                            <label for="first-rate4" title="Very good"></label>
                            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                            <label for="first-rate5" title="Amazing"></label>
                          </fieldset>
                    </div>
                    <div class="mb-3">
                        <label for="comment" class="form-label comm">Comments</label>
                        <textarea id="comment" name="review[comment]" cols="30" rows="3" class="form-control" required></textarea>
                        <div class="invalid-feedback">Please add some comments</div>
                    </div>
                    <button class="btn btn-dark add-btn mb-2">Submit</button>
                </form>
                <% } %>

                <% if(listing.reviews.length>0) { %>
                <hr>
                <h4>All Reviews</h4>
                <div class="row mt-3">
                    <% for(review of listing.reviews) { %>
                        <div class="card col-5 ms-3 mb-3 review-card">
                            <div class="card-body">
                                <h5 class="card-title">@<%= review.author.username %></h5>

                                <p class="starability-result" data-rating="<%= review.rating %>"></p>

                                <p class="card-text"><%= review.comment %></p>                              

                                <% if(currUser && currUser._id.equals(review.author._id)) { %>
                                <form method="post" action="/listings/<%=listing._id%>/reviews/<%= review._id %>?_method=Delete">
                                    <button class="btn btn-sm btn-dark add-btn">Delete</button>
                                </form>
                                <% } %>

                            </div>
                        </div>
                    <% } %>
                </div>
                <% } %>

            </div>
            <div class="col-6 offset-3 mb-3 map-view">
                <hr>
                <h3>Where you'll be</h3>
                <div id="map"></div>
            </div>
    </div>
    
<script src="/js/map.js"></script>