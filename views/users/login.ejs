<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-6 offset-3">
        <h2 class="offset-5">Login</h2>
        <form method="post" action="/login" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input id="username" placeholder="Enter username" name="username" class="form-control" required>
                <div class="invalid-feedback">Enter username</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" id="password" placeholder="Enter password" name="password" class="form-control" required>
                <div class="invalid-feedback">Enter password</div>
            </div>
            <div class="mb-3">
                <button class="btn btn-dark add-btn">Login</button>
            </div>
        </form>
    </div>
</div>